// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Animal {
  id                 String @id
  name               String
  description        String
  conservationStatus String
  phylum             String
  subPhylum          String
  class              String
  order              String
  family             String
}

